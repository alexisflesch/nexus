          \clip(0,0) rectangle (\TPHorizModule,.119\TPHorizModule); 
          \ch@ngecolors{\thetotalchapters}
          \draw[rectangle for page numbering] (.93\TPHorizModule,.0714\TPHorizModule) rectangle (\TPHorizModule,.1\TPHorizModule);%header style
          \node at (.965\TPHorizModule,.0857\TPHorizModule) {\thepage};
      \end{tikzpicture}
    \end{textblock}
}


